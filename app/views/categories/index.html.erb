<% if current_user%>
    
    <p>Search Courses:</p>
            <%= form_tag(categories_path, method: :get) do%>
                <%= text_field_tag(:search, params[:search])%>
                <%= submit_tag "Search"%>
            <%end%>
            <br>
    <% if @course%>
                <% @course.each do |course| %>
                <ul>
                    <br>
                    <li><%= link_to course.name, category_course_path(course.category_id, course.id) %></li><br>
                </ul>
                <br>
            <%end%>
    <%end%>

    <h1>Categories:</h1>

    <% @category.each do |category| %>
        <br>
        <li><%= link_to category.name, category_path(category) %></li>
        <br>
    <%end%>

<%end%>

