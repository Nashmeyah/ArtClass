<% if current_user%>
    
    <p>Search Courses:</p>
            <%= form_tag(categories_path, method: :get) do%>
                <%= text_field_tag(:search, params[:search])%>
                <%= submit_tag "Search"%>
            <%end%>
            <br>

    <h1>Categories:</h1>

    <% @category.each do |category| %>
        <br>
        <li><%= link_to category.name, category_path(category) %></li>
        <br>
    <%end%>

    

<%else%>
    You must sign in to access lists
<%end%>

