<h1>Category: <%= @category.name%></h1>

<h3>Courses:</h3>
<br>
<% @category.courses.each do |course|%>
    <p><%= link_to course.name, category_course_path(@category, course)%></p><br><br>
<%end%>

<% if current_user.admin?%>
    <%= link_to "Add Courses", new_category_course_path(@category.id) %><br><br>
    <%= link_to "Edit Category", edit_category_path %><br><br>

    <%= link_to "Delete Category",  @category, method: :delete%>
<%end%>